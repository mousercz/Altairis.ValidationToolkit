<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.5.0</Version>
    <Authors>Michal Altair Valášek - Altairis</Authors>
    <Company>Altairis</Company>
    <Product>Altairis Validation Toolkit</Product>
    <Description>Set of various interesting .NET validation attributes. Works with .NET Standard 2.0</Description>
    <Copyright>Copyright (c) Michal A. Valášek - Altairis, 2014-2019</Copyright>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/ridercz/Altairis.ValidationToolkit</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/ridercz/Altairis.ValidationToolkit/master/NuGet-64x64.png</PackageIconUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/ridercz/Altairis.ValidationToolkit.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.5.0" />
  </ItemGroup>

</Project>
